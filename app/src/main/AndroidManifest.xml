<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"  />
    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WPMS"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="false"/>

        <activity
            android:name=".View.NewEditPatientActivity"
            android:exported="false"/>

        <activity
            android:name=".View.CaregiverHomeActivity"
            android:exported="false"/>

        <activity
            android:name=".View.PatientViewActivity"
            android:exported="false"/>

        <activity
            android:name=".View.PatientHomeActivity"
            android:exported="false"/>

        <activity
            android:name=".View.LogInActivity"
            android:exported="false">
        </activity>

        <activity android:name=".View.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".View.SignUpActivity"
            android:exported="false" />

    </application>

</manifest>